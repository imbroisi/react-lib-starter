{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "linked-module-name": ["./node_modules/@imbroisi/react-starter-lib/lib/ems/*"],
      "linked-module-name/*": ["./node_modules/@imbroisi/react-starter-lib/lib/ems/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",    
  ]
}
